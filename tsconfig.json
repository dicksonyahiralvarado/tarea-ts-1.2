{
  "compilerOptions": {

    "target": "ES2020",                 
    "module": "NodeNext",                
    "moduleResolution": "NodeNext",      
    "esModuleInterop": true,            
    "types": ["node"],                  

   
    "strict": true,                      
    "forceConsistentCasingInFileNames": true, 
    "skipLibCheck": true,              

    // "rootDir": "./src",               
    // "outDir": "./dist",               
    "sourceMap": true                    
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
